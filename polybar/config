[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30

[bar/mybar]
module-margin = 1
separator =
height = 32
width = 100%
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #ab4642
bottom = true

modules-left = i3 
modules-center = 
modules-right = pulseaudio memory cpu battery wifi date

tray-position = right
tray-padding = 1
tray-offset = 1
tray-background = ${colors.background}

cursor-click = pointer

font-0 = Source Code Pro:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=10:antialias=false;1
font-2 = FontAwesome:style=Regular:pixelsize=10;1

[module/pulseaudio]
type = internal/pulseaudio
interval = 1

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
pin-workspaces = false
strip-wsnumbers = true
enable-scroll = false
index-sort = true

ws-icon-default = ""
ws-icon-0 = "0;0  "
ws-icon-1 = "1;"
ws-icon-2 = "2;"
ws-icon-3 = "3;"
ws-icon-4 = "4;"
ws-icon-5 = "5;"
ws-icon-6 = "6;6"
ws-icon-7 = "7;7"
ws-icon-8 = "8;8"
ws-icon-9 = "9;"

; 1 Terminal
; 2 Browser
; 3 Code
; 4 Open Office
; 5 Reading
; 9 Slack

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground= ${colors.primary}
label-focused-padding = 2.2

label-occupied = %name%
label-occupied-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = 
format-prefix-foreground = ${xrdb:color2}
label = %percentage:2%%
label-foreground = ${xrdb:color2}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${xrdb:color1}
label = %gb_used%/%gb_total%
label-foreground = ${xrdb:color1}

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3.0
label-connected = %essid%
label-connected-foreground = ${xrdb:color4}

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${xrdb:color4}

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${xrdb:color4}
label-disconnected-background = ${xrdb:color4}

format-disconnected = <label-disconnected>

[module/date]
type = internal/date
interval = 5

time =  %I:%M %p
time-alt =  %m/%d/%Y%

format-prefix = 

label = %date% %time%
label-foreground = ${xrdb:color5}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <ramp-capacity> <label-charging>
format-charging-foreground = ${xrdb:color3}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${xrdb:color3}

format-full-prefix = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 

[global/wm]
margin-top = 5
margin-bottom = 5
