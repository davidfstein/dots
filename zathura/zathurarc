# Light/Default mode settings:

#

#

set notification-error-bg "#ff5555"

set notification-error-fg "#c7ccd1"

set notification-warning-bg "#ffb86c"

set notification-warning-fg "#44475a"

set notification-bg "#1c2023"

set notification-fg "#c7ccd1"


set completion-bg "#1c2023"

set completion-fg "#6272a4"

set completion-group-bg "#1c2023"

set completion-group-fg "#6272a4"

set completion-highlight-bg "#44475a"

set completion-highlight-fg "#c7ccd1"


set index-bg "#1c2023"

set index-fg "#c7ccd1"

set index-active-bg "#44475a"

set index-active-fg "#c7ccd1"


set inputbar-bg "#1c2023"

set inputbar-fg "#c7ccd1"

set statusbar-bg "#1c2023"

set statusbar-fg "#c7ccd1"


set highlight-color "#ffb86c"

set highlight-active-color "#ff79c6"


set default-bg "#1c2023" # Background

set default-fg "#c7ccd1" # Foreground


set render-loading true

set render-loading-fg "#1c2023" # Background

set render-loading-bg "#c7ccd1" # Foreground


# Recolor mode settings

#

#

set recolor-lightcolor "#1c2023" # Background

set recolor-darkcolor "#c7ccd1" # Foreground


# Startup options

#

#

set adjust-open width

set recolor true
map <C-i> zoom in
map <C-o> zoom out
map <Left> navigate previous
map <Right> navigate next
